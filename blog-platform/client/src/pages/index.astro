---
import NavBar from "../components/NavBar.astro";
import Layout from "../layouts/MainLayout.astro";
import Banner from "../components/Banner.astro";
import SideBar from "../components/SideBar.astro";
import MainContainer from "../components/MainContainer.astro";
---

<Layout title="Animee">
  <NavBar />
  <Banner />
  <div
    id="container"
    class="w-scree lg:w-[var(--page-width-lg)] xl:w-[var(--page-width-xl)] mx-auto mt-10 grid grid-cols-1 xl:grid-cols-[1fr_4fr] gap-6"
  >
    <SideBar />
    <MainContainer />
  </div>
  <!-- <button id="create">Create</button>
  <div id="blog"></div> -->
</Layout>

<script>
  import { isLoggedIn } from "../store/userStore";

  const findUser = () => {
    const user = localStorage.getItem("user");
    if (user) isLoggedIn.set(true);
    else isLoggedIn.set(false);
  };

  document.addEventListener("DOMContentLoaded", findUser);
</script>
