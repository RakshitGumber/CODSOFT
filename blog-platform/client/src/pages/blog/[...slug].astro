---
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const blogs = await getCollection("blogs");
  return blogs.map((blog) => ({
    params: { slug: blog.id },
    props: { blog: blog.data },
  }));
}
const { blog } = Astro.props;
---

<h1>{blog.title}</h1>
<p>{blog.body}</p>
<span>{blog.authorId}</span>
